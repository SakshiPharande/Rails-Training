<h1 class="text-center my-4">Update User</h1>

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-lg-8">
    <%= form_with model: @user, url: user_path(@user), method: :patch, class: "row g-3" do |f| %>
        <!-- First Name -->
        <div class="col-md-6">
          <%= f.label :first_name, class: "form-label" %>
          <%= f.text_field :first_name, class: "form-control", required: true %>
        </div>

        <!-- Last Name -->
        <div class="col-md-6">
          <%= f.label :last_name, class: "form-label" %>
          <%= f.text_field :last_name, class: "form-control", required: true %>
        </div>

        <!-- Email -->
        <div class="col-md-6">
          <%= f.label :email, class: "form-label" %>
          <%= f.email_field :email, class: "form-control", required: true %>
        </div>

        <!-- Phone Number -->
        <div class="col-md-6">
          <%= f.label :phone_no, class: "form-label" %>
          <%= f.telephone_field :phone_no, class: "form-control", required: true %>
        </div>

        <!-- Password -->
        <div class="col-md-6">
          <%= f.label :password, class: "form-label" %>
          <%= f.password_field :password, class: "form-control", required: true %>
        </div>

        <!-- Submit and Back Buttons -->
        <div class="col-12">
          <%= f.submit 'Update User', class: "btn btn-primary" %>
          <%= link_to 'Back to Users', users_path, class: "btn btn-secondary ms-2" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
