<h1>Users</h1>

<%= link_to 'Add User', new_user_path%>

<table border="1" style="width: 100%; border-collapse: collapse;">
  <thead>
    <tr>
      <th>ID</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Phone No</th>
      <th>Role</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.email %></td>
        <td><%= user.phone_no %></td>
        <td><%= user.role %></td>
        <td>
           <%= link_to 'View', user_path(user)%> 
          <button>Edit</button>
          <button>Delete</button>
        </td> 
      </tr>
    <% end %>
  </tbody>
</table>
