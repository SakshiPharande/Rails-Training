<div class="container mt-4">
    <h1 class="text-center my-4">Users</h1>

    <div class="d-flex justify-content-start mb-3">
      <!-- Add User Button -->
      <%= link_to 'Add User', class: 'btn btn-primary' %>
    </div>


    <table class="table table-bordered table-hover">
      <thead class="table-dark">
        <tr>
          <th>ID</th>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Email</th>
          <th>Phone No</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.id %></td>
            <td><%= user.first_name %></td>
            <td><%= user.last_name %></td>
            <td><%= user.email %></td>
            <td><%= user.phone_no %></td>
            <td>
              <!-- View Icon -->
           <%= link_to user_path(user), class: "text-decoration-none" do %>
              <i class="bi bi-eye text-success me-3" title="View User"></i>
            <% end %>

              <!-- Edit Icon -->
              <i class="bi bi-pencil text-warning me-3" title="Edit"></i>
              <!-- Delete Icon -->
              <i class="bi bi-trash text-danger" title="Delete"></i>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>